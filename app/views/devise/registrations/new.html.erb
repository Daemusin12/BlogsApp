<div class="flex flex-col items-center m-4 ">
  <div class="flex flex-col justify-center items-center m-2 rounded-md w-[400px] bg-white">
    <div class="flex flex-col justify-center text-center m-2 h-[100px] font-bold text-[30px] font-sans text-[#5B55AE]">
        Register User
    </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <div class="flex flex-col field">
      <%= f.label :email %>
      <%= f.email_field :email, class: "m-4 rounded-md", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="flex flex-col field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "m-4 rounded-md" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: "m-4 rounded-md", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "m-4 rounded-md", autocomplete: "new-password" %>
    </div>

    <div class="flex flex-col justify-center m-4 rounded-md h-[40px] bg-[#F8F9FC] text-[#5B55AE]">
      <%= f.submit "Sign up", class: "w-full mx-auto h-full cursor-pointer" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>