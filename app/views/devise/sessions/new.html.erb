<div class="flex flex-col items-center m-4 ">
  <div class="flex flex-col items-center m-2 rounded-md w-[400px] bg-white">
    <div class="flex flex-col justify-center text-center m-2 h-[100px] font-bold text-[30px] font-sans text-[#5B55AE]">
        Blogs
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field ">
        <%= f.email_field :email, class: "m-4 mb-0 rounded-md", autofocus: true, autocomplete: "email", placeholder: "Enter your email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: "m-4 rounded-md", autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field m-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="flex flex-col justify-center m-4 rounded-md h-[40px] bg-[#5B55AE] text-white">
        <%= f.submit "Log In", class: "w-full mx-auto h-full cursor-pointer" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>