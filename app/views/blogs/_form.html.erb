<%= form_with model: blog do |f| %>
  <% if f.object.errors.any? %>
    <div>
      <% f.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="flex flex-col gap-3">  
    <div class="flex flex-row gap-3">
        <%= f.label :title, class: "flex items-center justify-center" %>
        <%= f.text_field :title %>
    </div>
    <div class="flex flex-row gap-2">
        <%= f.label :body, class: "flex items-center justify-center" %>
        <%= f.text_area :body, class: "w-full" %>
    </div>
  </div>

  <div class="flex flex-col justify-center m-4 rounded-md h-[40px] bg-[#5B55AE] text-white">
    <%= f.button "CREATE", class: "w-full mx-auto h-full cursor-pointer" %>
  </div>

<% end %>